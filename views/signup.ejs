<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Mulai Menulis!</h1>
                    </div>
                    <form class="user" method="POST" action="/api/addpengguna">
                        <div class="form-group">
                            <input type="text" class="form-control form-control-user" name="nik"
                                placeholder="Tulis NIK kamu...">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-user" name="username"
                                placeholder="Tulis username kamu...">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control form-control-user"
                                placeholder="Tulis password kamu...">
                        </div>
                        <div class="form-group">
                          <select name="status" class="form-control">
                            <option selected>Pilih</option>
                            <option value="0">Administrator</option>
                            <option value="1">Pengguna</option>
                          </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Daftar sekarang
                        </button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="/login">Sudah memiliki akun? masuk disini!</a><br>
                        <a class="small" href="/">kembali</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>